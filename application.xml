<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="FireCHIP-8" package="FireCHIP8" version="1.0.0" company="4AM Games" />
	
	<!-- output -->
	<app main="Main" file="FireCHIP8" path="bin" />
	
	<window background="#073642" fps="30" />
	<window width="320" height="160" if="release" />
	<window width="640" height="480" if="debug" />
	<window orientation="landscape" vsync="false" antialiasing="0" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<assets path="assets" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
	<haxedef name="fdb" if="flash" />
	
</project>